/* pages/lookatcar/lookatcar.wxss */

.page {
  margin-top: 20px;
  height: 100%;
}

.sechcar_ipt {
  margin: 0 auto;
  display: flex;
  align-items: center;
}
.page_bd{
  width: 90%;
  height: 100%;
  margin: 0 auto;
}
.sechcar_ipt input {
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  border-right: none;
  padding-left: 8px;
  height: 45px;
  width: 80%;
  background: #fff;
}

.chasech {
  height: 45px;
  line-height: 45px;
  font-size: 14px;
  width: 20%;
  background: #f90;
  color: #fff;
  border: none;
  border-radius: 0;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.select_box{
  background: #fff;
  width: 100%;
  margin: 30rpx auto;
  position: relative;
  border-radius: 5px;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 95rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 51rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 91rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}