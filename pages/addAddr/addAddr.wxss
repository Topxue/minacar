/* pages/address/addAddr.wxss */
page{
  font-size: 14px;
  background: #f5f5f5;
}
view{
  box-sizing: border-box;
}
.topView{
  width: 100%;
  background: #fff;
  border-bottom: solid 1px #eee;
  border-top: solid 1px #eee;
  margin-top: 10px;
}
.nameView{
  width: 100%;
  height: 45px;
  display: flex;
}
.item-left{
  width: 40%;
  line-height: 45px;
  padding-left: 10px;
}
.item-right{
  width: 160%;
  line-height: 45px;
}
.item-right input{
  width: 100%;
  height: 45px;
}
.nameView .item-right text{
  padding: 3px 10px;
  border-radius: 2px;
  border: solid 1px #eee;
  margin-right:10px;
}
.telView{
  width: 100%;
  display: flex;
  height: 45px;
  border-bottom: solid 1px #eee;
  background: #fff;
}
.addrView{
  width: 100%;
  display: flex;
  height: 45px;
  border-bottom: 1px #eee solid;
  background: #fff;
}
.noAddr{
  color: #999;
}
.addrView .item-right{
  padding-right: 30px;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.addrView .item-right image{
  width: 10px;
  height: 15px;
  position: absolute;
  right: 10px;
  top: 15px;
}
.isDefault{
  width: 100%;
  height: 45px;
  line-height: 45px;
  padding-left: 10px;
  background: #fff;
  border-bottom: solid 1px #eee;
  position: relative;
}
.isDefault icon{
  position: absolute;
  right: 10px;
  top: 7.5px;
}
.payBtn{
  width: 90%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  margin: 0 auto;
  margin-top: 20px;
  color: #fff;
  background: #fd3d09;
  border-radius: 5px;
}