/* pages/setting/share.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #f5f5f5;
  position: fixed;
  top: 0px;
  left: 0px;
}
.bgView{
  width: 100%;
  overflow: hidden;
  text-align: center;
  position: relative;
    margin-top: 50px;
}
.userPic{
  width:80px;
  height: 80px;
  border-radius: 50%;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
 button{
  width: 60%;
  height: 50px;
  border-radius: 40px;
 border: none;
  background: #fff;
  color: #e83743;
  position: absolute;
  bottom: 50px;
  left: 0px;
  right: 0px;
  margin: 0 auto;
  line-height:50px;
  box-shadow: 1px 1px 3px #ccc;
}
button::after {
  border: 0;
} 
button::after{
border: none;
}

.newBg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  background-image: url(https://www.chefubang.com.cn/static/img/share.jpg);
  background-size: 100% 100%;
}