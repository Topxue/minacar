.main {
  background: #fff;
}

.cart-box {
  padding-bottom: 100rpx;
}

.cart-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 185rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.cart-list .cart-pro-select {
  position: absolute;
  left: 20rpx;
  top: 90rpx;
  width: 45rpx;
  height: 45rpx;
  color: #fff;
}

.cart-list .cart-thumb {
  position: absolute;
  top: 20rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}

.cart-list .cart-pro-name {
  font-weight: 700;
  font-style: normal;
  padding-top: 5px;
  height: 33px;
  line-height: 17px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cart-list .cart-pro-price {
  display: inline-block;
  color: #b12704;
  font-weight: 700;
}

.cart-list .cart-count-box {
  display: flex;
  position: absolute;
  left: 74%;
  bottom: 20rpx;
  width: 165rpx;
  border: 1px solid #eee;
  height: 48rpx;
}

.cart-list .cart-count-box text {
  display: inline-block;
  line-height: 45rpx;
  text-align: center;
}

.cart-count-down, .cart-count-add {
  font-size: 30rpx;
  width: 50rpx;
  height: 100%;
  background: #ccc;
  color: #fff;
}

.cart-count-num {
  width: 67rpx;
  text-align: center;
  height: 24px;
}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.checkall {
  color: #000;
}
.remove_shop{
  color: #999;
  margin-left: 32px;
}
.gotoBy{
    position: fixed;
    right: 5px;
    bottom: 8px;
    width: 22%;
    font-size: 12px;
    height: 28px;
    line-height: 28px;
    background: #f90;
    color: #fff;
    border: none;
    border-radius: 18px;
}
.cart-footer {
  line-height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  padding: 0 100rpx 0 80rpx;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  box-sizing: border-box;
  background: #fff;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}

.order-icon {
  position: absolute;
  right: 40rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}

.order-icon image, .order-icon navigator {
  display: block;
  width: 45rpx;
  height: 45rpx;
}

.cart-toatl-price::before {
  content: "总计金额";
  color: #000;
}

.cart-toatl-price {
  padding-left: 28px;
  color: #b12704;
  font-weight: 700;
}

.cart-no-data {
  padding: 40rpx 0;
  color: #999;
  text-align: center;
}
