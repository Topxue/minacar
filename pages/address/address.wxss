/* pages/address/address.wxss */
page{
  font-size: 14px;
  background: #f5f5f5;
}
view{
  box-sizing: border-box;
}
.addressList{
  width: 100%;
  background: #fff;
  display: flex;
  border-top: solid 1px #eee;
}
.chooseBtn,.handAddrView{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.chooseBtn text{
  padding: 3px 6px;
  border: solid 1px #d81e06;
  color: #d81e06;
}
.addrInfo{
  width: 250%;
}
.addrName{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  padding-left: 10px;
}
.username{
  font-size: 14px;
}
.addrDetail{
  width: 100%;
  padding: 10px;
  padding-top: 0px;
  line-height: 20px;
  color: #999;
}
.addAddrBtn{
  color:#d81e06;
  text-align: center;
  line-height: 40px;
  height: 40px;
  border-top: #f5f5f5;
  background: #fff;
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
}
.addAddrBtn image{
  width: 20px;
  height: 20px;
  vertical-align:middle;
}
.states{
  color: #ccc;
  margin-left: 12px;
  width: 26px;
  font-size: 0.6rem;
  height: 18px;
  line-height: 18px;
  text-align: center;
  border: 1px solid #eee;
  display: inline-block;
}