/* pages/violation/violation.wxss */

.searchCarsViolations {
  width: 100%;
  background: #fff;
  border: 10px solid #eee;
  box-sizing: border-box;
}

.searchCarsViolations view {
  text-indent: 12px;
  height: 50px;
  display: flex;
  align-items: center;
  width: 100%;
  overflow: hidden;
  margin-top: 8px;
}

.searchCarsViolations view label {
  height: 50px;
  line-height: 50px;
  color: #999;
}

.carNameipt {
  text-indent: 5%;
  border-bottom: 1px solid #eee;
  width: 65%;
  border-radius: 0px;
}
.search_btn {
  font-size: 16px;
  width: 60%;
  border: 1px solid #f90;
  color: #f90;
  background: #fff;
  line-height: 40px;
  height: 40px;
  display: block;
  padding: 0px;
  margin-bottom: 20px;
  margin-top: 15px;
}

.list_nav {
  margin: 0 auto;
  width: 95%;
  background: #fff;
  justify-content: space-around;
  padding: 20px 0 20px 0;
}

.list_nav view text {
  display: block;
  margin-top: 8px;
  color: #666;
}

.list_nav view image {
  width: 98%;
  height: 42px;
  padding-top: 10px;
}

.bg_image {
  background: #ff8b00;
  width: 60px;
  height: 60px;
  line-height: 60px;
  border-radius: 100%;
  margin: 0 auto;
  display: block;
}

.xainx_sech {
  width: 100% !important;
  height: 31px !important;
  padding-top: 15px !important;
}

.logoimg {
  background: #fff;
  margin: 10px 10px;
  padding: 30px 0px;
  box-sizing: border-box;
}

.logoimg image {
  width: 40%;
  display: block;
  margin: 0 auto;
  height: 30px;
}
