page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
  margin-top: 10px;
  background: #fff;
}
.staus_view{
  text-indent: 18px;
  color: #999;
  justify-content: space-between;
  line-height: 45px;
  border-bottom: 1px solid #eee;
  height: 45px;
}
.staus_view text:first-child::before{
  content: "订单编号："
}
.staus_view text:last-child{
  color: #e77a11;
  margin-right: 10px;
}
.weui-navbar__item.weui-bar__item_on{
  color: #e77a11;
}
.weui-navbar__slider{
  background: #e77a11;
  width: 4em;
  height: 1px;
}
.weui-navbar{
  position: fixed;
  border: none;
  background: #fff;
}
.numer_tetx{
  color: #999;
}
.picle_tx{
  color: #c05135;
}
.numer_tetx::before{
  content: "共 "
}
.numer_tetx::after{
  content: " 件"
}
.pice_number{
  height: 23px;
  justify-content: space-between;
  margin-top: 8px;
}
.oder_btn{
  height: 40px;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  align-items: center;
  justify-content: flex-end;
}
.oder_btn text{
  font-size: 13px;
  text-align: center;
  border-radius: 50px;
  border: 1px solid #eee;
  width: 75px;
  height: 25px;
  margin-right: 8px;
  line-height: 25px;
}
.oder_btn text:last-child{
  color: #e77a11;
}
.title_name{
  color: #555;
  font-size: 13px;
  width: 90%;
}
.weui-media-box__hd_in-appmsg {
  width: 80px;
  height: 70px;
}
.picle_tx::before{
  content: "￥"
}
