/* pages/detailslei/detailslei.wxss */

.page {
  background: #fff;
}

.search_vw {
  position: fixed;
  top: 0;
  z-index: 4;
  width: 100%;
  background: #eee;
  padding: 10px 0;
  max-width: 640px;
  margin: 0 auto;
}

.search_vw input {
  padding-left: 8px;
  background: #fff;
  width: 82%;
  height: 34px;
  font-size: 14px;
  margin-left: 15px;
  border: none;
  color: #666;
}

.search_vw .icon-fangdajing {
  background: #fff;
  height: 34px;
  padding-right: 8px;
  color: #999;
}

.clear {
  clear: both;
  overflow: hidden;
}

.tabTit {
  border-bottom: 1px solid #eee;
  height: 90rpx;
  line-height: 97rpx;
  position: fixed;
  top: 50px;
  width: 100%;
  z-index: 1;
  background: #fff;
  font-size: 15px;
  text-align: center;
}

.tabTit .active {
  color: #f90 !important;
  background: #fff;
}

.icon-down1 {
  font-size: 16px;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 192rpx;
  z-index: 1;
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
}

.tabLayer text {
  text-indent: -17rem;
  width: 97%;
  height: 64rpx;
  line-height: 48rpx;
  float: left;
  border-bottom: solid 1px #eee;
  padding: 20rpx 0 0 12px;
}

.tabLayer .active {
  color: #f90;
}

.flex1 {
  border-left: 1px solid #eee;
  flex: 1;
  overflow: hidden;
  display: block;
}

/*弹性盒模型*/

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

navigator {
  display: inline;
}

.list {
  margin-top: 96px;
}

.list .list_item {
  align-items: center;
  margin-top: 10px;
  padding: 10px;
  height: 100px;
  border-bottom: 1px solid #e8e8e8;
}

.img_vw {
  width: 38%;
  height: 100%;
}

.img_vw image {
  height: 91%;
  width: 85%;
}

.info {
  width: 94%;
}

.title {
  font-size: 13px;
  font-weight: 700;
}

.price {
  margin-top: 8px;
  color: #b12704;
  font-weight: 700;
  display: inline-block;
}

.jionCart {
  text-align: center;
  font-size: 13px;
  position: relative;
  right: -7rem;
  top: 12px;
  display: inline-block;
  width: 68px;
  border: 1px solid #f90;
  color: #f90;
  padding: 5px 9px;
  border-radius: 5px;
}
