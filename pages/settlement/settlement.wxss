/* pages/settlement/ settlement.wxss */

.address_vw {
  font-size: 13px;
  height: 80px;
  background: #fdf5ee;
}

.address_vw view:first-child {
  padding-top: 15px;
}

.address_vw view {
  align-items: center;
  text-indent: 48px;
}

.address_vw view:last-child {
  text-indent: 15px;
}

.address_vw view:last-child text {
  flex-wrap: wrap;
  text-indent: 0px;
  padding-left: 14px;
  width: 78%;
}

.name_s::before {
  content: "收货人： ";
}

.icon-dingwei2 {
  color: #f90;
}

.add_adres {
  margin: 5px 0 8px 0;
  color: #fff;
  width: 100%;
  height: 40px;
  background: #f90;
  font-size: 15px;
  align-items: center;
  justify-content: center;
}

.line_view {
  background: url(http://www.weifeng360.com/mobiweifeng/common/images/sureBottom.png) repeat-x bottom;
  height: 5px;
}

.commodity {
  border-bottom: 1px solid #eee;
  padding-left: 10px;
  align-items: center;
  height: 100px;
  background: #fff;
}

.pc_bcleft text {
  display: inline-block;
}

.pc_bcleft {
  width: 76%;
  margin-left: 8px;
}

.pc_bcleft text:last-child {
  padding-left: 5px;
  color: #f90;
}

