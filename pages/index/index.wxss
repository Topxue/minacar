/* shop-list */

.shop_list {
  border-bottom: 10px solid #eee;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.shop_list text {
    line-height: 20px;
    height: 40px;
    width: 94%;
    margin: 0 auto;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.shop_list text:nth-child(3) {
     height: 20px;
    font-style: normal;
    display: block;
    color: #B12704;
    margin-left: 3%;
    font-weight: 700;
}

.shop_list text:nth-child(3)::before {
  content: "热卖价：￥";
}

.shop_list view {
  padding-bottom: 10px;
  background: #fff;
  width: 49.4%;
  border: 1px solid #eee;
}

.shop_list image {
  width: 89%;
  height: 175px;
}
